<!DOCTYPE html>
<html lang="en">
    <head>  
<%- include ('partials/head', {style: 'loginStyles' , title: 'Iniciar Sesion' }) %>
    </head>

    <body>
        <%- include ('partials/header') %>

            <% if (typeof errors !='undefined' ) { %>
                <ul>
                    <% for(let i=0; i< errors.length; i++){ %>
                        <li>
                            <%=errors[i].msg%>
                        </li>
                        <%}%>
                </ul>
                <% } %>

                    <main>
                        <div class="containerPrincipal">

                            <div class="form-group">
                                <div class="welcome">
                                    <h1 class="welcomeh1">¡BIENVENIDOS!</h1>
                                </div>
                                <form action="/user/login" method="post" class="formuserpass" id="loginForm">
                                    <input type="text"  name="email"class="form-control" 
                                        placeholder="Ingresa tu email" id="email" value="<%= typeof old != "undefined" ? old.email : "" %>">

                                    <input id="password" type="password" class="form-control" name="password"
                                        placeholder="Ingresa contraseña">
                                         <% if(locals.errors?.unauthorize) { %>
                                            <p class="error"><%= errors.unauthorize.msg %></p>
                                        <% } %>

                                    <button type="submit" class="boton">iniciar sesion</button>
                                </form>
                                <div class="check">
                                    <input type="checkbox" class="check" value="first_checkbox">
                                    <label class="remember">recordame</label>
                                </div>
                                <a href="/user/register" class="cuenta">¿No tienes Cuenta? <b>Registrate</b></a>

                                <a href="/recovery" class="olvidar">¿Olvidaste tu contraseña?</a>
                                <a href="https://www.facebook.com"><button id="facebook">Ingresa con
                                        Facebook</button></a>
                                <a href="https://www.gmail.com"><button id="gmail">Ingresa con Gmail</button></a>

                            </div>
                        </div>
                        <script src="/public/js/loginValidationJavascript.js"></script>
                        <script src="/src/validation/loginValidation.js"></script>
                    </main>
                    <%- include ('partials/footer') %>
                </body>
                </html>   
